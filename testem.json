{
  "framework": "jasmine2",
  "before_tests": "coffee -cb **/*.coffee",
  "on_exit": "rm *.js ./src/*.js ./spec/*Spec.js",
  "src_files": [
    "**/*.coffee"
  ],
  "serve_files": [
    "./bower_components/jquery/dist/jquery.js",
    "./bower_components/jasmine-jquery/lib/jasmine-jquery.js",
    "./src/*.js",
    "./spec/*.js"
  ],
  "launch_in_dev": ["PhantomJS", "Chrome", "Safari"]
}
